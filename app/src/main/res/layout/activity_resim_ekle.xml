<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resimEkle">


    <ImageView
        android:id="@+id/imageEkle"
        android:layout_width="188dp"
        android:layout_height="188dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/resim_background_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/resimUrlET"
        android:layout_width="209dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/url_text_shape"
        android:ems="10"
        android:hint="Resim Url"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/imageEkle"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/imageEkle"
        app:layout_constraintTop_toBottomOf="@+id/imageEkle" />

    <Button
        android:id="@+id/buttonEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="ekle"
        app:layout_constraintEnd_toEndOf="@+id/resimUrlET"
        app:layout_constraintTop_toBottomOf="@+id/resimUrlET" />

    <Button
        android:id="@+id/buttonGoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="gÃ¶ster"
        app:layout_constraintStart_toStartOf="@+id/resimUrlET"
        app:layout_constraintTop_toBottomOf="@+id/resimUrlET" />
</androidx.constraintlayout.widget.ConstraintLayout>